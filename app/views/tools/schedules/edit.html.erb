    <%= d.label(d.object.Name)%>
    <%= d.hidden_field(:Name,:value => d.object.Name) %>
    <br>
    ------------------------------------------------
    <br>
    <%= d.fields_for :slots do |s| %>
      <%= s.text_field(:Desc, autocomplete: "off")%>
      <br>
    <% end %>

    <br>
    <%= d.label(:Summary_about_the_day)%>
    <br>
    <%= d.text_area(:Summary,{cols: 10, rows:10, autocomplete: "off"})%>
    <br>
  <% end %>

  <br>
  <%=f.submit "update"%>

<%end%>
